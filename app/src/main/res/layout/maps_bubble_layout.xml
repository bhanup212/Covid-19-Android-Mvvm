<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    android:layout_margin="6dp"
    android:elevation="6dp"
    android:id="@+id/bubble_layout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">
        <TextView
            android:id="@+id/country_name_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="India"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="total confirmed cases"
            android:layout_gravity="center"
            android:text="@string/total_confirmed_cases"/>
        <TextView
            android:id="@+id/total_cases_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            tools:text="20,000"
            android:layout_gravity="center"
            android:textSize="26sp"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp">
           <ImageView
               android:layout_width="12dp"
               android:layout_height="12dp"
               android:src="@drawable/active_round_bg"
               android:layout_marginEnd="8dp"
               android:layout_gravity="center"/>
           <TextView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:text="@string/active_cases"
               android:textSize="13sp"
               android:layout_gravity="center"
               android:textColor="@android:color/black"/>
           <TextView
               android:id="@+id/active_cases_bubble"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginEnd="6dp"
               android:gravity="end"
               android:textSize="13sp"
               android:layout_gravity="center"
               android:textColor="@android:color/black"
               tools:text="20,000"/>

       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/active_round_bg"
                android:tint="#60bb69"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/recovered_cases"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/recovered_cases_bubble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:gravity="end"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                tools:text="20,000"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/active_round_bg"
                android:tint="#767676"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/fatal_cases"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/fatal_cases_bubble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:gravity="end"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                tools:text="20,000"/>
        </LinearLayout>
        <TextView
            android:id="@+id/updated_date_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="31 March 2020"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="0dp"/>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>